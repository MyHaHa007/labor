<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity">

    <FrameLayout
        android:layout_centerInParent="true"
        android:paddingTop="70dp"
        android:layout_width="320dp"
        android:layout_height="650dp">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            app:cardBackgroundColor="@color/colorLogin"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
           >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <TextView
                   android:layout_marginTop="50dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="50dp"
                   android:text="@string/register"
                   android:textColor="#fff"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   />
               <LinearLayout
                   android:layout_marginTop="10dp"
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout
                       android:textColorHint="#f0f7f4"
                       android:layout_width="match_parent"
                       android:theme="@style/TextLabel"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:hint="手机号"
                           android:textColor="#f0f7f4"
                           android:id="@+id/register_mobile_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>
               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout
                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:hint="密码"
                           android:textColor="#f0f7f4"
                           android:id="@+id/register_newPassword_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>

               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="确定密码"
                           android:id="@+id/register_confirmNewPassword_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>

               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="姓名"
                           android:id="@+id/register_name_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>


               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="身份证号码"
                           android:id="@+id/register_identityCard_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>


               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="户籍地址"
                           android:id="@+id/register_permanentAddress_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>


               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="通讯地址"
                           android:id="@+id/register_correspondenceAddress_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>

               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="学历/学位"
                           android:id="@+id/register_xlxwType_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>


               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="电话"
                           android:id="@+id/register_phone_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp" />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>


               <LinearLayout
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:layout_marginBottom="5dp">
                   <android.support.design.widget.TextInputLayout

                       android:textColorHint="#f0f7f4"
                       android:theme="@style/TextLabel"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <EditText
                           android:textSize="15sp"
                           android:textColor="#f0f7f4"
                           android:hint="邮箱"
                           android:id="@+id/register_email_ed"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@drawable/selector_bg_edit_2"
                           android:textCursorDrawable="@drawable/bg_input_cursor_2"
                           android:paddingBottom="2dp"
                           />
                   </android.support.design.widget.TextInputLayout>
               </LinearLayout>

               <!--身份证正面照-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="5dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="身份证正面照"
                       android:layout_marginRight="8dp"
                       android:textSize="16dp"
                       android:textColor="@color/white" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="添加"
                       android:textSize="16dp"
                       android:id="@+id/register_addIDCardFrontImg_tv"
                       android:textColor="@color/register_addImgTv_color"/>
               </LinearLayout>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/register_idCardFront_img"
                   android:layout_marginLeft="50dp"/>

               <!--身份证反面照-->
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="5dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="身份证反面照"
                       android:layout_marginRight="8dp"
                       android:textSize="16dp"
                       android:textColor="@color/white"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="添加"
                       android:textSize="16dp"
                       android:id="@+id/register_addIDCardBackImg_tv"
                       android:textColor="@color/register_addImgTv_color"/>
               </LinearLayout>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/register_idCardBack_img"
                   android:layout_marginLeft="50dp"/>

               <!--学历/学位照-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:paddingStart="50dp"
                   android:paddingEnd="30dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="5dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="学历/学位照"
                       android:textColor="@color/white"
                       android:layout_marginRight="8dp"
                       android:textSize="16dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="添加"
                       android:textSize="16dp"
                       android:id="@+id/register_addXlxwImg_tv"
                       android:textColor="@color/register_addImgTv_color"/>
               </LinearLayout>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/register_xlxw_img"
                   android:layout_marginLeft="50dp" />


               <Button
                   android:layout_marginTop="20dp"
                   android:layout_gravity="center_horizontal"
                   android:id="@+id/register_btn"
                   android:background="@drawable/bt_shape_2"
                   android:stateListAnimator="@drawable/state_list_animator_z"
                   android:layout_width="130dp"
                   android:layout_height="45dp"
                   android:text="@string/next"
                   android:textColor="@color/colorLogin"
                   android:layout_marginBottom="20dp">
               </Button>



           </LinearLayout>
            </ScrollView>


        </android.support.v7.widget.CardView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/plus_x"
            android:transitionName="loginFab"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


</RelativeLayout>
